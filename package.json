{
  "name": "taedal-server",
  "version": "1.0.0",
  "description": "Taedal v7 backend (Express + TypeScript)",
  "main": "dist/index.js",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "preinstall": "git lfs install || true",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",

    // --- CI/CD helpers for Option B (LFS) ---
    "vercel-build": "git lfs pull || true && npm ci && npm run build",
    "render-build": "git lfs pull || true && npm ci && npm run build"
  },
  "dependencies": {
    "@google/model-viewer": "^4.1.0",
    "@supabase/supabase-js": "^2.45.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@walletconnect/ethereum-provider": "^2.22.4",
    "body-parser": "^2.2.0",
    "coinbase-commerce-node": "1.0.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "ogl": "^1.0.11",
    "stripe": "^16.0.0",
    "three": "^0.172.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/three": "^0.172.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.6.3"
  },
  "overrides": {
    "three": "^0.172.0"
  }
}
